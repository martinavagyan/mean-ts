    "nodemon": "^1.12.1",
    "tslint": "^5.9.1"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/express": "^4.0.37",
    "@types/mongoose": "^4.7.23",
    "chai": "^4.1.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.1",
    "mocha": "^5.0.5",
    "mongoose": "^4.12.0",
    "nodemailer": "^4.1.2",
    "request": "^2.85.0",
    "typescript": "^2.8.1"
  }
